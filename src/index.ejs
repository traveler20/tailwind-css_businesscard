<%_ const path='./'; _%>
<!DOCTYPE html>
<html lang="ja">
  <head>
    <!-- meta -->
    <%- include('./_common/_head', { path:path,meta:data.meta['home'],})%>
  </head>
  <body>
    <%- include('./_common/_header',{path:path,}) %>

    <!-- .l-main -->
    <main class="l-main">
      <section class="l-section">
        <div class="l-section__inner">
          <figure class="flex items-center gap-8 mb-9">
            <picture class="c-block-picture">
              <img
                class="c-block-picture__image"
                src="https://avatars.githubusercontent.com/u/60683849?v=4"
                alt="traveler20"
                loading="lazy"
              />
            </picture>
            <figcaption>
              <h1 class="c-text-heading1">traveler20</h1>
              <a
                class="c-text-gray"
                href="https://github.com/traveler20"
                target="_blank"
                rel="nofollow noopener noreferrer"
                >GitHub</a
              >
            </figcaption>
          </figure>

          <article class="c-block-tabs">
            <!--menu1-->
            <input id="tab1" type="radio" name="c-block-tabs__item" checked />
            <label class="c-block-tabs__item" for="tab1">Value</label>

            <!--menu2-->
            <input id="tab2" type="radio" name="c-block-tabs__item" />
            <label class="c-block-tabs__item" for="tab2">Timeline</label>

            <!--menu3-->
            <input id="tab3" type="radio" name="c-block-tabs__item" />
            <label class="c-block-tabs__item" for="tab3">Work</label>

            <!--content1-->
            <div class="c-block-tabs__content" id="tab1_content">
              <%- include('./_content/_value',{path:path,}) %>
            </div>

            <!--content2-->
            <div class="c-block-tabs__content" id="tab2_content">
              <%- include('./_content/_timeline',{path:path,}) %>
            </div>

            <!--content3-->
            <div class="c-block-tabs__content" id="tab3_content">
              <%- include('./_content/_work',{path:path,}) %>
            </div>
          </article>
        </div>
      </section>
    </main>
    <!-- /.l-main -->

    <%- include('./_common/_footer',{path:path,}) %>
  </body>
</html>
